<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
        【<%= l(@first_day, format: :middle) %>】勤怠管理表
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %>
      </td>
      <td>
        指定勤務時間：<%= format_basic_info(@user.basic_start_time) %><br>
        指定勤務終了時間：<%= format_basic_info(@user.basic_finish_time) %>
      </td>
      <td>基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>出勤日数:<%= @worked_sum %></td>
      <td>締日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-admin">
  <% if admin? %>
  <div>
    <%= link_to "【所属長承認申請のお知らせ】", attendances_edit_one_month_user_path(date: @first_day) %><br>
    <%= link_to "【勤怠変更申請のお知らせ】", attendances_edit_one_month_user_path(date: @first_day) %><br>
    <%= link_to "【残業申請のお知らせ】", attendances_edit_one_month_user_path(date: @first_day) %>
  </div>
  <% end %>
  <div>
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  </div>
  <div>
    <%= link_to "勤怠修正ログ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  </div>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan=3>残業申請</th>
        <th rowspan=3>日付</th>
        <th rowspan=3>曜日</th>
        <th colspan=8>【実績】</th>
        <th colspan=5>所定外勤務</th>
      </tr>
      <tr>
        <th colspan=3>出社</th>
        <th colspan=3>退社</th>
        <th rowspan=2>在社時間</th>
        <th rowspan=2>備考</th>
        <th colspan=2>終了予定時間</th>
        <th rowspan=2>時間外勤務</th>
        <th rowspan=2>業務処理内容</th>
        <th rowspan=2>指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    <tbody>
    <% @attendances.each do |day| %>
      <tr>
        <td><%= link_to "残業申請", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %></td>
        <td><%= l(day.worked_on, format: :short) %></td>
        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
        <td>
          <%= l(day.started_at, format: :hour) if day.started_at.present? %>
        </td>
        <td>
          <%= l(day.started_at, format: :minute) if day.started_at.present? %>
        </td>
        <td>
          <% if btn_text = attendance_state(day) %>
            <% if day.started_at.nil? %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          <% end %>
        <td>
          <%= l(day.finished_at, format: :hour) if day.finished_at.present? %>
        </td>
        <td>
          <%= l(day.finished_at, format: :minute) if day.finished_at.present? %>
        </td>
        <td>
          <% if btn_text = attendance_state(day) %>
            <% if day.started_at.present? && day.finished_at.nil? %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
        </td>
        <td></td>
        <td><%= day.note %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td></td>
        <td colspan=2></td>
        <td colspan=6></td>
        <td></td>
        <td colspan=5></td>
        <td class="table-padding table-space">
          所属長承認　未<br>
          <select>
            <option>管理者を選択してください</option>
            <option>山下さん</option>
            <option>鈴木さん</option>
            <option>佐藤さん</option>
          </select><br>
          <%= link_to "申請", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>