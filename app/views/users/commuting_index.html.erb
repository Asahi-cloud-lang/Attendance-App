<% provide(:title, 'Commuting Users') %>
<h1>ユーザー一覧</h1>

<table class="table table-bordered table-condensed table-hover center" >
  <thead>
    <tr>
      <th class="center">社員番号</th>
      <th class="center">名前</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% user.attendances.each do |day| %>
        <% if Date.current == day.worked_on %>
          <% if day.started_at.present? && day.finished_at.nil? %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>