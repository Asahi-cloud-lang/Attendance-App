<% provide(:title, 'Commuting Users') %>
<h1>拠点情報</h1>

<table class="table table-bordered table-condensed table-hover center" >
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th class="center">拠点番号</th>
      <th class="center">拠点名</th>
      <th class="center">勤怠情報</th>
    </tr>
  </thead>
  <tbody>
      <td><%= link_to "修正", bases_edit_user_path(@user), remote: true, class: "btn btn-primary" %></td>
      <td><%= link_to "削除", bases_user_path(@user), method: :delete ,data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %></td>
      <td class="middle"><%= @user.base_id %></td>
      <td class="middle">
        <% if @user.base_id %>
          <%= @base.base_name %>
        <% else %>
          拠点情報なし
        <% end %>
      </td>
      <td class="middle">
        <%= @state %>
      </td>
  </tbody>
</table>

<div class="base_add_frame">
  <button class="btn btn-primary"><%= link_to "拠点情報追加", bases_new_user_path(@user), remote: true %></button>
</div>

<!--モーダルウインドウ表示-->
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>